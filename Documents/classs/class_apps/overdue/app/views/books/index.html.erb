<p id="notice"><%= notice %></p>

<h1>My Books</h1>
<br>
<%= link_to 'New Book', new_book_path %>
<br>
<br>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Author</th>
      <th>Due date</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.author %></td>
        <td><%= book.due_date %></td>
        <td><%= link_to 'Edit', edit_book_path(book) %></td>
        <td><%= link_to 'Returned', book, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<br>
